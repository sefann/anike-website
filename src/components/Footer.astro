---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { name: 'LinkedIn', href: 'https://www.linkedin.com/in/olamidefatosin/', icon: 'linkedin' },
  { name: 'Instagram', href: 'https://www.instagram.com/anikebrands?igsh=MTlnYXJyZXk3d2V1dw%3D%3D&utm_source=qr', icon: 'instagram' },
  { name: 'TikTok', href: 'https://www.tiktok.com/@anikebrands?_t=ZS-90Xbb7iUGsC&_r=1', icon: 'tiktok' },
  { name: 'Twitter', href: 'https://x.com/anikemide?s=21', icon: 'twitter' },
];
---

<footer class="bg-black text-white section">
  <div class="container">
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      <!-- Brand -->
      <div>
        <img 
          src="/anike logos/anikelogo.svg" 
          alt="AnikeBrands Logo" 
          class="h-24 md:h-32 lg:h-40 w-auto mb-4 brightness-0 invert"
        />
        <p class="text-white mb-6">
          Building timeless brands through thoughtful and intentional visual storytelling
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4 text-white">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="/about" class="text-white hover:text-purple-400 transition-colors">About</a></li>
          <li><a href="/services" class="text-white hover:text-purple-400 transition-colors">Services</a></li>
          <li><a href="/projects" class="text-white hover:text-purple-400 transition-colors">Projects</a></li>
          <li><a href="/gallery" class="text-white hover:text-purple-400 transition-colors">Gallery</a></li>
          <li><a href="/contact" class="text-white hover:text-purple-400 transition-colors">Contact</a></li>
        </ul>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="font-semibold mb-4 text-white">Services</h4>
        <ul class="space-y-2">
          <li><a href="/services" class="text-white hover:text-purple-400 transition-colors">Brand Identity</a></li>
          <li><a href="/services" class="text-white hover:text-purple-400 transition-colors">Logo Design</a></li>
          <li><a href="/services" class="text-white hover:text-purple-400 transition-colors">Print Design</a></li>
        </ul>
      </div>
      
      <!-- Contact -->
      <div>
        <h4 class="font-semibold mb-4 text-white">Get In Touch</h4>
        <ul class="space-y-3 text-white">
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href="mailto:hello@anikebrands.com" class="text-white hover:text-white transition-colors">
              hello@anikebrands.com
            </a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href="tel:+2349060160288" class="text-white hover:text-white transition-colors">
              +234 906 016 0288
            </a>
          </li>
          <li class="flex items-center gap-2">
            <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <span>Nigeria</span>
          </li>
        </ul>
        
        <!-- Follow Me Button -->
        <button class="mt-6 px-6 py-2 bg-white hover:bg-gray-100 rounded-lg text-black font-medium transition-colors">
          Follow Me
        </button>
        
        <!-- Social Media Icons -->
        <div class="flex gap-3 mt-4">
          {socialLinks.map((social) => (
            <a 
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 rounded-full border-2 border-white hover:border-purple-400 flex items-center justify-center transition-all"
              aria-label={social.name}
            >
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              )}
              {social.icon === 'tiktok' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-1-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                </svg>
              )}
              {social.icon === 'twitter' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 flex justify-between items-center text-white text-sm">
      <p>&copy; {currentYear} AnikeBrands. All rights reserved.</p>
      <div class="flex gap-4">
        <a href="/privacy" class="hover:text-purple-400 transition-colors">Privacy Policy</a>
        <span>•</span>
        <a href="/terms" class="hover:text-purple-400 transition-colors">Terms of Service</a>
        <span>•</span>
        <span>Built by <a href="https://www.linkedin.com/in/stephen-iortyer-5b602b140/" target="_blank" rel="noopener noreferrer" class="hover:text-purple-400 transition-colors">SefxSolutions</a></span>
      </div>
    </div>
  </div>
</footer>
