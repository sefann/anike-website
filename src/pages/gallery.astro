---

<BaseLayout 
  title="Gallery - AnikeBrands"
  description="Browse through our visual gallery showcasing our creative design work and visual projects."
>
  <!-- Hero Section -->
  <section class="section-lg relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/gallery-banner.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Transparent Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <MotionWrapper client:load>
          <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">
            Design <span class="gradient-text">Gallery</span>
          </h1>
          <p class="text-xl text-gray-200">
            A visual showcase of our creative work, featuring designs across 
            branding, web, print, and digital media.
          </p>
        </MotionWrapper>
      </div>
    </div>
  </section>
  
  <!-- Gallery Grid -->
  <section class="section bg-gray-900">
    <div class="container">
      <GalleryGrid client:load images={galleryImages} />
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section relative overflow-hidden">
    <!-- Black Abstract Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-black via-[#0a0a0a] to-black">
      <div class="absolute inset-0 opacity-40" style="background-image: radial-gradient(circle at 30% 40%, rgba(139, 92, 246, 0.15) 0%, transparent 50%), radial-gradient(circle at 70% 60%, rgba(236, 72, 153, 0.15) 0%, transparent 50%), radial-gradient(circle at 50% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);"></div>
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 2px, rgba(139, 92, 246, 0.03) 2px, rgba(139, 92, 246, 0.03) 4px);"></div>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 text-white">
          Love What You <span class="gradient-text">See?</span>
        </h2>
        <p class="text-gray-300 mb-8">
          Let's create something amazing together for your brand.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/projects" class="btn btn-primary btn-lg">
            View All Projects
          </a>
          <a href="/contact" class="btn btn-outline btn-lg text-white border-white hover:bg-white hover:text-gray-900">
            Get in Touch
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
