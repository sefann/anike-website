---
import BaseLayout from '../layouts/BaseLayout.astro';
import MotionWrapper from '../components/react/MotionWrapper.jsx';
import CountUp from '../components/react/CountUp.jsx';
---

<BaseLayout 
  title="Contact - AnikeBrands"
  description="Get in touch with AnikeBrands to discuss your next design project."
>
  <!-- Hero Section -->
  <section class="section-lg relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/contact-banner.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Transparent Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <MotionWrapper client:load>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 text-white">
            Let's Work <span class="gradient-text">Together</span>
          </h1>
          <p class="text-xl text-gray-200 mb-4">
            Ready to bring your vision to life? I'd love to hear about your project and discuss how we can create something amazing together.
          </p>
        </MotionWrapper>
      </div>
    </div>
  </section>
  
  <!-- Contact Form Section -->
  <section class="py-12 md:py-16 relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/genback.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Transparent Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto">
        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Contact Form -->
          <div class="lg:col-span-2">
            <MotionWrapper client:load delay={0.1}>
              <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl p-6 md:p-8 border border-gray-800">
                <h2 class="text-xl md:text-2xl font-bold mb-1 text-white">Send Me a Message</h2>
                <p class="text-sm text-gray-300 mb-6">Fill out the form below and I'll get back to you within 24 hours.</p>
                
                <form id="contact-form" class="space-y-4">
                  <div>
                    <label for="name" class="block text-xs font-medium text-gray-300 mb-1">
                      Name *
                    </label>
                    <input 
                      type="text" 
                      id="name" 
                      name="name" 
                      required
                      class="w-full px-3 py-2 text-sm rounded-lg border border-gray-600 bg-gray-800/50 text-white placeholder-gray-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 outline-none transition-all"
                    />
                  </div>
                  
                  <div>
                    <label for="email" class="block text-xs font-medium text-gray-300 mb-1">
                      Email *
                    </label>
                    <input 
                      type="email" 
                      id="email" 
                      name="email" 
                      required
                      class="w-full px-3 py-2 text-sm rounded-lg border border-gray-600 bg-gray-800/50 text-white placeholder-gray-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 outline-none transition-all"
                    />
                  </div>
                  
                  <div>
                    <label for="company" class="block text-xs font-medium text-gray-300 mb-1">
                      Company
                    </label>
                    <input 
                      type="text" 
                      id="company" 
                      name="company"
                      class="w-full px-3 py-2 text-sm rounded-lg border border-gray-600 bg-gray-800/50 text-white placeholder-gray-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 outline-none transition-all"
                    />
                  </div>
                  
                  <div>
                    <label for="service" class="block text-xs font-medium text-gray-300 mb-1">
                      Service Needed
                    </label>
                    <select 
                      id="service" 
                      name="service"
                      class="w-full px-3 py-2 text-sm rounded-lg border border-gray-600 bg-gray-800/50 text-white focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 outline-none transition-all"
                    >
                      <option value="" class="bg-gray-800">Select a service</option>
                      <option value="Brand Identity" class="bg-gray-800">Brand Identity</option>
                      <option value="Print Design" class="bg-gray-800">Print Design</option>
                      <option value="Mobile Design" class="bg-gray-800">Mobile Design</option>
                      <option value="Illustration" class="bg-gray-800">Illustration</option>
                      <option value="Other" class="bg-gray-800">Other</option>
                    </select>
                  </div>
                  
                  <div>
                    <label for="budget" class="block text-xs font-medium text-gray-300 mb-1">
                      Budget Range
                    </label>
                    <select 
                      id="budget" 
                      name="budget"
                      class="w-full px-3 py-2 text-sm rounded-lg border border-gray-600 bg-gray-800/50 text-white focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 outline-none transition-all"
                    >
                      <option value="" class="bg-gray-800">Select budget range</option>
                      <option value="$50 - $500" class="bg-gray-800">$50 - $500</option>
                      <option value="$500 - $1,000" class="bg-gray-800">$500 - $1,000</option>
                      <option value="$1,000 - $2,500" class="bg-gray-800">$1,000 - $2,500</option>
                      <option value="$2,500 - $5,000" class="bg-gray-800">$2,500 - $5,000</option>
                      <option value="$5,000 - $10,000" class="bg-gray-800">$5,000 - $10,000</option>
                      <option value="Over $10,000" class="bg-gray-800">Over $10,000</option>
                    </select>
                  </div>
                  
                  <div>
                    <label for="message" class="block text-xs font-medium text-gray-300 mb-1">
                      Message *
                    </label>
                    <textarea 
                      id="message" 
                      name="message" 
                      rows="4"
                      required
                      class="w-full px-3 py-2 text-sm rounded-lg border border-gray-600 bg-gray-800/50 text-white placeholder-gray-400 focus:border-purple-500 focus:ring-2 focus:ring-purple-500/20 outline-none transition-all resize-none"
                    ></textarea>
                  </div>
                  
                  <button 
                    type="submit"
                    class="btn btn-primary text-sm px-6 py-2 w-full sm:w-auto"
                  >
                    Send Message
                  </button>
                  
                  <div id="form-message" class="hidden mt-4 p-4 rounded-lg"></div>
                </form>
              </div>
            </MotionWrapper>
          </div>
          
          <!-- Sidebar -->
          <div class="lg:col-span-1">
            <MotionWrapper client:load delay={0.2}>
              <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl p-6 md:p-8 border border-gray-800">
                <!-- Get In Touch -->
                <div>
                  <h3 class="text-lg font-bold mb-4 text-white">Get In Touch</h3>
                  
                  <div class="space-y-4">
                    <div>
                      <h4 class="text-sm font-semibold text-white mb-1">Email</h4>
                      <p class="text-xs text-gray-300 mb-1">Send us an email and we'll respond within 24 hours</p>
                      <a href="mailto:hello@anikebrands.com" class="text-sm text-purple-400 hover:text-pink-400 font-medium transition-colors">
                        hello@anikebrands.com
                      </a>
                    </div>
                    
                    <div>
                      <h4 class="text-sm font-semibold text-white mb-1">Phone</h4>
                      <p class="text-xs text-gray-300 mb-1">Call us for urgent projects or detailed discussions</p>
                      <a href="tel:+2349060160288" class="text-sm text-purple-400 hover:text-pink-400 font-medium transition-colors">
                        +234 906 016 0288
                      </a>
                    </div>
                    
                    <div>
                      <h4 class="text-sm font-semibold text-white mb-1">WhatsApp</h4>
                      <p class="text-xs text-gray-300 mb-1">Message us on WhatsApp for quick responses</p>
                      <a href="https://wa.me/2349060160288" target="_blank" rel="noopener noreferrer" class="text-sm text-purple-400 hover:text-pink-400 font-medium transition-colors">
                        +234 906 016 0288
                      </a>
                    </div>
                    
                    <div>
                      <h4 class="text-sm font-semibold text-white mb-1">Location</h4>
                      <p class="text-xs text-gray-300 mb-1">Based in Nigeria, serving clients worldwide</p>
                      <p class="text-sm text-white font-medium">Nigeria</p>
                    </div>
                  </div>
                </div>
              </div>
            </MotionWrapper>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/whiteback.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Transparent Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto">
        <MotionWrapper client:load>
          <h2 class="text-3xl font-bold mb-8 text-center text-white">Frequently Asked Questions</h2>
          
          <div class="space-y-6">
            <div class="bg-gray-900/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-800">
              <h3 class="text-xl font-bold mb-3 text-white">How long does a typical project take?</h3>
              <p class="text-gray-300">
                Project timelines vary based on scope and complexity. Brand identity projects typically take 2-3 weeks, while web design projects can take 3-4 weeks.
              </p>
            </div>
            
            <div class="text-center pt-4">
              <a 
                href="/faqs"
                class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium hover:from-purple-600 hover:to-pink-600 transition-all"
              >
                Read More FAQs
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
            </div>
          </div>
        </MotionWrapper>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section relative overflow-hidden">
    <!-- Dark Gradient Background -->
    <div class="absolute inset-0 bg-gradient-to-b from-[#0d0518] via-[#1a0d2e] to-[#0d0518]"></div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto">
        <MotionWrapper client:load>
          <div class="rounded-3xl p-8 md:p-12 text-center text-white">
            <h2 class="text-3xl md:text-4xl font-bold mb-4">
              Ready to Bring Your <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Vision</span> to Life?
            </h2>
            <p class="text-lg mb-8 text-gray-300 max-w-2xl mx-auto">
              Let's collaborate to create something extraordinary. Whether you need a complete brand identity, stunning visual communication, or strategic brand positioning, we're here to help you stand out and connect with your audience.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
              <a href="#contact-form" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg bg-gradient-to-r from-purple-500 to-pink-500 text-white font-medium hover:from-purple-600 hover:to-pink-600 transition-all">
                Start Your Project
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                </svg>
              </a>
              <a href="https://wa.me/2349060160288" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 rounded-lg border-2 border-white text-white font-medium hover:bg-white/10 transition-all">
                Let's Chat
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
                </svg>
              </a>
            </div>
            
            <div class="grid grid-cols-3 gap-6 pt-8 border-t border-white/20 max-w-2xl mx-auto">
              <div class="text-center">
                <div class="text-2xl font-bold mb-1 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Free</div>
                <div class="text-sm text-gray-300">Initial Consultation</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold mb-1 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">24h</div>
                <div class="text-sm text-gray-300">Response Time</div>
              </div>
              <div class="text-center">
                <div class="text-2xl font-bold mb-1 bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">
                  <CountUp client:load end={100} suffix="%" startDelay={300} />
                </div>
                <div class="text-sm text-gray-300">Client Satisfaction</div>
              </div>
            </div>
          </div>
        </MotionWrapper>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const form = document.getElementById('contact-form');
  const messageDiv = document.getElementById('form-message');
  
  // Get Formspree endpoint from environment variable or use default
  // Format: https://formspree.io/f/{your-form-id}
  const formspreeEndpoint = import.meta.env.PUBLIC_FORMSPREE_ENDPOINT || 'https://formspree.io/f/xwprdoer';
  
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const submitButton = form.querySelector('button[type="submit"]');
      const originalText = submitButton?.textContent;
      if (submitButton) {
        submitButton.disabled = true;
        submitButton.textContent = 'Sending...';
      }
      
      const formData = new FormData(form);
      
      // Prepare data for Formspree
      const data = {
        name: formData.get('name'),
        email: formData.get('email'),
        company: formData.get('company') || '',
        service: formData.get('service') || '',
        budget: formData.get('budget') || '',
        message: formData.get('message'),
      };
      
      try {
        if (!formspreeEndpoint) {
          throw new Error('Formspree endpoint not configured. Please set PUBLIC_FORMSPREE_ENDPOINT in your environment variables.');
        }
        
        const response = await fetch(formspreeEndpoint, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        if (response.ok) {
          messageDiv.className = 'mt-4 p-4 rounded-lg bg-green-50 text-green-700 border border-green-200';
          messageDiv.textContent = 'Thank you! Your message has been sent successfully.';
          messageDiv.classList.remove('hidden');
          form.reset();
          
          setTimeout(() => {
            messageDiv.classList.add('hidden');
          }, 5000);
        } else {
          const errorData = await response.json();
          throw new Error(errorData.error || 'Failed to send message');
        }
      } catch (error) {
        console.error('Formspree error:', error);
        messageDiv.className = 'mt-4 p-4 rounded-lg bg-red-50 text-red-700 border border-red-200';
        messageDiv.textContent = error.message || 'Sorry, there was an error sending your message. Please try again.';
        messageDiv.classList.remove('hidden');
      } finally {
        if (submitButton) {
          submitButton.disabled = false;
          submitButton.textContent = originalText || 'Send Message';
        }
      }
    });
  }
</script>
