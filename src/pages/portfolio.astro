---
import BaseLayout from '../layouts/BaseLayout.astro';
import PortfolioSection from '../components/react/PortfolioSection.jsx';
import { portfolioItems } from '../data/portfolio.js';
import MotionWrapper from '../components/react/MotionWrapper.jsx';
---

<BaseLayout 
  title="Portfolio - AnikeBrands"
  description="Explore our portfolio of creative design projects across branding, web design, UI/UX, and more."
>
  <!-- Hero Section -->
  <section class="section-lg bg-gradient-to-br from-gray-50 to-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <MotionWrapper client:load>
          <h1 class="mb-6">
            Our <span class="gradient-text">Portfolio</span>
          </h1>
          <p class="text-xl text-gray-600">
            A collection of our finest work, showcasing creativity and innovation 
            across various industries.
          </p>
        </MotionWrapper>
      </div>
    </div>
  </section>
  
  <!-- Portfolio Section with Filter -->
  <section class="section">
    <div class="container">
      <PortfolioSection client:load items={portfolioItems} />
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">
          Have a Project in <span class="gradient-text">Mind?</span>
        </h2>
        <p class="text-gray-600 mb-8">
          Let's collaborate to create something extraordinary.
        </p>
        <a href="/contact" class="btn btn-primary btn-lg">
          Start a Project
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

