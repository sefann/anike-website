---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { services } from '../data/services.js';
import { portfolioItems } from '../data/portfolio.js';
import { brandDetails } from '../data/brands.js';
import FeaturedWorkCard from '../components/FeaturedWorkCard.astro';
import { testimonials } from '../data/testimonials.js';
import TestimonialsCarousel from '../components/react/TestimonialsCarousel.jsx';
import MotionWrapper from '../components/react/MotionWrapper.jsx';
import CountUp from '../components/react/CountUp.jsx';
---

<BaseLayout title="AnikeBrands - Creative Design Portfolio">
  <Hero />
  
  <!-- Services Section -->
  <section class="section relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/featured.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Transparent Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
          Creative <span class="gradient-text">Services</span>
        </h2>
        <p class="text-lg text-gray-200 max-w-3xl mx-auto">
          We offer a full suite of design and brand communication services, tailored to help businesses tell their stories beautifully and strategically.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <MotionWrapper client:load delay={index * 0.1}>
            <ServiceCard 
              title={service.title}
              description={service.description}
              features={service.features}
              icon={service.icon}
            />
          </MotionWrapper>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/services" class="btn btn-primary btn-lg bg-white text-gray-900 hover:bg-gray-100">
          View All Services
        </a>
      </div>
    </div>
  </section>
  
  <!-- Featured Work Section -->
  <section class="section relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/genback.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Transparent Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
          Featured <span class="gradient-text">Work</span>
        </h2>
        <p class="text-lg text-gray-200 max-w-3xl mx-auto">
          Explore some of my recent projects that showcase creativity, attention to detail, and innovative design solutions.
        </p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 mb-8">
        {portfolioItems.slice(0, 3).map((item, index) => {
          // Map slugs to background logo filenames
          const backgroundLogoMap = {
            '30-pol': '/background logos/30pointsoflight.png',
            'burning-altar': '/background logos/burningalter.png',
            'creamy-crumbles': '/background logos/CCRUMBLES LOGO-B.png',
            'chicares': '/background logos/chicares.png',
            'hebron-sage': '/background logos/hebron and sage.jpg',
            'justice-research-institute': '/background logos/JRI LOGO-B.jpg',
            'mc-obed': '/background logos/mc obed8.png',
            'sallyz': '/background logos/SALLYZ LOGO-B.png',
            'the-gospel-experience': '/background logos/TGE LOGOS-B.png',
            'the-real-estate-chic': '/background logos/therealestatechic.jpg',
            'unpack-it': '/background logos/UNPACK IT LOGO-B.png',
          };
          const logo = backgroundLogoMap[item.slug] || null;
          return (
            <MotionWrapper client:load delay={index * 0.1}>
              <FeaturedWorkCard 
                title={item.title}
                category={item.category}
                description={item.description}
                logo={logo}
                tags={item.tags}
                slug={item.slug}
              />
            </MotionWrapper>
          );
        })}
      </div>
      
      <div class="text-center">
        <a href="/projects" class="btn btn-primary btn-lg">
          View All Projects
        </a>
      </div>
    </div>
  </section>
  
  <!-- Testimonials Section -->
  <section class="section relative overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <img 
        src="/assets/testimonial-background.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    
    <!-- Dark Overlay -->
    <div class="absolute inset-0 bg-black/80"></div>
    
    <div class="container relative z-10">
      <div class="text-center mb-12">
        <p class="text-primary text-sm md:text-base font-medium mb-2 uppercase tracking-wider">
          TESTIMONIALS
        </p>
        <h2 class="text-3xl md:text-5xl font-bold mb-4">
          <span class="text-white block">What the brands say about</span>
          <span class="text-primary block">AnikeBrands</span>
        </h2>
      </div>
      
      <div class="max-w-4xl mx-auto">
        <TestimonialsCarousel client:load testimonials={testimonials} />
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-12 md:py-16 bg-gradient-to-b from-[#0d0518] to-[#1a0f2e]">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-5xl font-bold mb-4">
          <span class="text-white">Ready to Bring Your </span>
          <span class="gradient-text">Vision to Life?</span>
        </h2>
        <p class="text-base md:text-lg text-white mb-8 max-w-2xl mx-auto leading-relaxed">
          Let's collaborate to create something extraordinary. Whether you need a complete brand identity, stunning visual communication, or strategic brand positioning, we're here to help you stand out and connect with your audience.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-10">
          <a href="/contact" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-brand text-white rounded-lg hover:shadow-lg transition-all font-medium">
            <span>Start Your Project</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
          <a href="https://wa.me/2349060160288" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 px-6 py-3 bg-transparent border-2 border-white text-white rounded-lg hover:bg-white/10 transition-all font-medium">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            <span>Let's Chat</span>
          </a>
        </div>
        
        <!-- Stats -->
        <div class="grid grid-cols-3 gap-6 max-w-2xl mx-auto pt-6 border-t border-gray-700">
          <div>
            <div class="text-2xl md:text-3xl font-bold gradient-text mb-1">Free</div>
            <div class="text-xs text-gray-300">Initial Consultation</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold gradient-text mb-1">24h</div>
            <div class="text-xs text-gray-300">Response Time</div>
          </div>
          <div>
            <div class="text-2xl md:text-3xl font-bold gradient-text mb-1">
              <CountUp client:load end={100} suffix="%" startDelay={400} />
            </div>
            <div class="text-xs text-gray-300">Client Satisfaction</div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
