---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import { services } from '../data/services.js';
import MotionWrapper from '../components/react/MotionWrapper.jsx';
---

<BaseLayout 
  title="Services - AnikeBrands"
  description="Explore our comprehensive range of design services including branding, web design, UI/UX, and more."
>
  <!-- Hero Section -->
  <section class="section-lg relative overflow-hidden bg-gray-900">
    <!-- Word Cloud Background -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="text-[200px] md:text-[300px] lg:text-[400px] font-black text-white select-none" style="font-family: 'Arial', sans-serif; line-height: 1;">
          GRAPHIC
        </div>
      </div>
      <div class="absolute top-20 left-10 text-[80px] md:text-[120px] font-black text-white select-none opacity-60">IDENTITY</div>
      <div class="absolute top-10 left-1/4 text-[60px] md:text-[90px] font-black text-white select-none opacity-50">ENGINEERING</div>
      <div class="absolute top-32 right-20 text-[70px] md:text-[100px] font-black text-white select-none opacity-60">BUSINESS</div>
      <div class="absolute top-1/4 right-1/3 text-[50px] md:text-[80px] font-black text-white select-none opacity-50">LABEL</div>
      <div class="absolute bottom-32 left-20 text-[60px] md:text-[90px] font-black text-white select-none opacity-60">PROJECT</div>
      <div class="absolute bottom-20 left-1/3 text-[70px] md:text-[100px] font-black text-white select-none opacity-50">CREATIVE</div>
      <div class="absolute bottom-40 right-1/4 text-[55px] md:text-[85px] font-black text-white select-none opacity-50">ARCHITECTURE</div>
      <div class="absolute top-1/3 right-10 text-[45px] md:text-[70px] font-black text-white select-none opacity-50">DRAWING</div>
      <div class="absolute top-1/2 right-1/4 text-[50px] md:text-[75px] font-black text-white select-none opacity-50">PRINTING</div>
      <div class="absolute top-40 right-1/2 text-[40px] md:text-[65px] font-black text-white select-none opacity-50">COMMERCIAL</div>
      <div class="absolute top-1/2 left-1/4 text-[45px] md:text-[70px] font-black text-white select-none opacity-50">PERSPECTIVE</div>
      <div class="absolute bottom-1/3 right-1/3 text-[50px] md:text-[80px] font-black text-white select-none opacity-50">BANNER</div>
      <div class="absolute bottom-1/4 left-1/2 text-[60px] md:text-[90px] font-black text-white select-none opacity-50">DESIGNER</div>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-4xl mx-auto">
        <MotionWrapper client:load>
          <div class="text-center mb-8">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
              <span class="text-purple-400">Design</span> 
              <span class="bg-gradient-to-r from-purple-400 to-pink-400 bg-clip-text text-transparent">Services</span> 
              <span class="text-white">That Drive Results</span>
            </h1>
            <p class="text-lg md:text-xl text-white text-left max-w-3xl mx-auto mb-8">
              From brand identity to web design, I offer comprehensive design solutions that help your business stand out and connect with your audience.
            </p>
          </div>
          
          <!-- Benefits List -->
          <div class="flex flex-wrap justify-center gap-6 md:gap-8 mb-10">
            {[
              'Custom Design Solutions',
              'Fast Turnaround Times'
            ].map((benefit, index) => (
              <div key={index} class="flex items-center gap-2 text-white">
                <svg class="w-5 h-5 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>{benefit}</span>
              </div>
            ))}
          </div>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/contact" class="inline-flex items-center gap-2 px-6 py-3 bg-gradient-to-r from-purple-500 to-pink-500 text-white rounded-lg hover:from-purple-600 hover:to-pink-600 transition-all font-medium">
              <span>Start Your Project</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
            <a href="/projects" class="inline-flex items-center gap-2 px-6 py-3 bg-black border-2 border-white text-white rounded-lg hover:bg-gray-900 transition-all font-medium">
              View My Work
            </a>
          </div>
        </MotionWrapper>
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="section relative overflow-hidden">
    <!-- Black Abstract Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-black via-[#0a0a0a] to-black">
      <div class="absolute inset-0 opacity-40" style="background-image: radial-gradient(circle at 30% 40%, rgba(139, 92, 246, 0.15) 0%, transparent 50%), radial-gradient(circle at 70% 60%, rgba(236, 72, 153, 0.15) 0%, transparent 50%), radial-gradient(circle at 50% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);"></div>
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 2px, rgba(139, 92, 246, 0.03) 2px, rgba(139, 92, 246, 0.03) 4px);"></div>
    </div>
    
    <div class="container relative z-10">
      <!-- Heading Section -->
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
          Our <span class="gradient-text">Services</span>
        </h2>
        <p class="text-lg md:text-xl text-gray-300 max-w-3xl mx-auto">
          A full suite of design and brand communication services, tailored to help businesses tell their stories beautifully and strategically.
        </p>
      </div>
      
      <!-- Services Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <MotionWrapper client:load delay={index * 0.1}>
            <ServiceCard 
              title={service.title}
              description={service.description}
              features={service.features}
              icon={service.icon}
              timeline={service.timeline}
            />
          </MotionWrapper>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Process Section -->
  <section class="section relative overflow-hidden bg-gray-900">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
            My Design <span class="gradient-text">Process</span>
          </h2>
          <p class="text-lg text-gray-300 max-w-3xl mx-auto">
            A proven methodology that ensures every project is delivered on time, on budget, and exceeds expectations.
          </p>
        </div>
        
        <div class="grid md:grid-cols-4 gap-6 relative">
          <!-- Connecting Line -->
          <div class="hidden md:block absolute top-8 left-0 right-0 h-0.5 bg-gradient-to-r from-purple-500 via-pink-500 to-purple-500 opacity-30"></div>
          
          {[
            { 
              step: '01', 
              title: 'Discovery & Consultation', 
              desc: 'We start with a detailed discussion about your project goals, target audience, and brand vision.',
              icon: 'chat',
              items: [
                'Project brief and requirements',
                'Target audience analysis',
                'Brand positioning discussion',
                'Timeline and budget planning'
              ]
            },
            { 
              step: '02', 
              title: 'Research & Strategy', 
              desc: 'I conduct thorough research and develop a strategic approach tailored to your specific needs.',
              icon: 'lightbulb',
              items: [
                'Market and competitor analysis',
                'Design strategy development',
                'Creative direction planning',
                'Technical requirements review'
              ]
            },
            { 
              step: '03', 
              title: 'Design & Creation', 
              desc: 'The creative process begins with concept development, iterations, and refinement.',
              icon: 'palette',
              items: [
                'Initial concept development',
                'Design iterations and refinements',
                'Client feedback integration',
                'Final design approval'
              ]
            },
            { 
              step: '04', 
              title: 'Delivery & Support', 
              desc: 'Final deliverables are provided with ongoing support to ensure your success.',
              icon: 'check',
              items: [
                'Final file delivery',
                'Brand guidelines documentation',
                'Implementation support',
                'Post-project consultation'
              ]
            },
          ].map((item, index) => (
            <MotionWrapper client:load delay={index * 0.1}>
              <div class="relative bg-gray-800/50 backdrop-blur-sm rounded-2xl p-6 border border-gray-700 hover:border-purple-500/50 transition-all">
                <!-- Step Number -->
                <div class="text-2xl font-bold text-purple-400 mb-4">{item.step}</div>
                
                <!-- Icon -->
                <div class="w-12 h-12 rounded-xl bg-gradient-to-r from-purple-500 to-pink-500 flex items-center justify-center mb-4">
                  {item.icon === 'chat' && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                    </svg>
                  )}
                  {item.icon === 'lightbulb' && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                    </svg>
                  )}
                  {item.icon === 'palette' && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                    </svg>
                  )}
                  {item.icon === 'check' && (
                    <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  )}
                </div>
                
                <!-- Title -->
                <h3 class="text-lg font-bold mb-3 text-white">{item.title}</h3>
                
                <!-- Description -->
                <p class="text-sm text-gray-300 mb-4 leading-relaxed">{item.desc}</p>
                
                <!-- Items List -->
                <ul class="space-y-2">
                  {item.items.map((listItem) => (
                    <li class="text-xs text-purple-400 flex items-start gap-2">
                      <span class="mt-1">â€¢</span>
                      <span>{listItem}</span>
                    </li>
                  ))}
                </ul>
              </div>
            </MotionWrapper>
          ))}
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section relative overflow-hidden">
    <!-- Black Abstract Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-black via-[#0a0a0a] to-black">
      <div class="absolute inset-0 opacity-40" style="background-image: radial-gradient(circle at 30% 40%, rgba(139, 92, 246, 0.15) 0%, transparent 50%), radial-gradient(circle at 70% 60%, rgba(236, 72, 153, 0.15) 0%, transparent 50%), radial-gradient(circle at 50% 80%, rgba(139, 92, 246, 0.1) 0%, transparent 50%);"></div>
      <div class="absolute inset-0" style="background-image: repeating-linear-gradient(45deg, transparent, transparent 2px, rgba(139, 92, 246, 0.03) 2px, rgba(139, 92, 246, 0.03) 4px);"></div>
    </div>
    
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center p-12 rounded-3xl">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-white">
          Ready to Get Started?
        </h2>
        <p class="text-xl mb-8 text-gray-300">
          Let's discuss how we can help bring your vision to life.
        </p>
        <a href="/contact" class="btn btn-primary btn-lg">
          Contact Us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
