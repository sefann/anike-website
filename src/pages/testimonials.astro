---
import BaseLayout from '../layouts/BaseLayout.astro';
import TestimonialsCarousel from '../components/react/TestimonialsCarousel.jsx';
import TestimonialCard from '../components/TestimonialCard.astro';
import { testimonials } from '../data/testimonials.js';
import MotionWrapper from '../components/react/MotionWrapper.jsx';
---

<BaseLayout 
  title="Testimonials - AnikeBrands"
  description="See what our clients have to say about working with AnikeBrands."
>
  <!-- Hero Section -->
  <section class="section-lg bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
    <div class="absolute inset-0 opacity-5">
      <img 
        src="/assets/testimonial-background.png" 
        alt="Background"
        class="w-full h-full object-cover"
      />
    </div>
    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <MotionWrapper client:load>
          <h1 class="mb-6">
            Testimonials
          </h1>
          <p class="text-xl text-gray-600">
            What the brands say about AnikeBrands
          </p>
        </MotionWrapper>
      </div>
    </div>
  </section>
  
  <!-- Carousel Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <TestimonialsCarousel client:load testimonials={testimonials} />
      </div>
    </div>
  </section>
  
  <!-- All Testimonials Grid -->
  <section class="section bg-gray-50">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">
          What the brands say about <span class="gradient-text">AnikeBrands</span>
        </h2>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        {testimonials.map((testimonial, index) => (
          <MotionWrapper client:load delay={index * 0.1}>
            <TestimonialCard 
              name={testimonial.name}
              role={testimonial.role}
              company={testimonial.company}
              content={testimonial.content}
              avatar={testimonial.avatar}
              rating={testimonial.rating}
            />
          </MotionWrapper>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center p-12 rounded-3xl bg-gradient-brand text-white">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Join Our Happy Clients?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Let's create something amazing together.
        </p>
        <a href="/contact" class="btn bg-white text-primary hover:bg-gray-100">
          Get Started
        </a>
      </div>
    </div>
  </section>
</BaseLayout>


