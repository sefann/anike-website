---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { portfolioItems } from '../../data/portfolio.js';
import { brandDetails } from '../../data/brands.js';
import MotionWrapper from '../../components/react/MotionWrapper.jsx';
import ProjectGallery from '../../components/react/ProjectGallery.jsx';

export async function getStaticPaths() {
  const paths = portfolioItems.map((item) => ({
    params: { slug: item.slug },
    props: { item, brandDetail: brandDetails[item.slug] || null },
  }));
  return paths;
}

const { item, brandDetail } = Astro.props;
const brand = brandDetail || {
  title: item.title,
  logo: item.image,
  summary: item.description,
  projectBrief: item.description,
  approach: '',
  result: '',
  client: item.client,
  sector: item.category,
  country: '',
  year: item.year,
  scopeOfWork: item.tags.join(', '),
  galleryImages: [item.image],
};
---

<BaseLayout 
  title={`${brand.title} - Projects - AnikeBrands`}
  description={brand.summary}
>
  <!-- Project Page - Dark Theme Layout -->
  <section class="min-h-screen bg-[#0d0518] text-white py-12 md:py-20">
    <div class="container max-w-7xl">
      <!-- Large Transparent Card -->
      <div class="bg-white/5 backdrop-blur-sm rounded-3xl border border-white/10 p-6 md:p-8 lg:p-12 shadow-2xl">
        <div class="grid lg:grid-cols-2 gap-8 lg:gap-16">
        <!-- Left Panel - Text Content -->
        <div class="space-y-6 md:space-y-8">
          <!-- Logo and Title -->
          <div class="flex items-start gap-4 mb-4">
            {brand.logo && (
              <img 
                src={brand.logo} 
                alt={`${brand.title} Logo`}
                class="h-12 md:h-16 w-auto object-contain flex-shrink-0"
              />
            )}
            <div>
              <h1 class="text-2xl md:text-3xl lg:text-4xl font-bold mb-1 leading-tight">{brand.title}</h1>
              {brand.client && brand.client !== brand.title && (
                <p class="text-gray-400 text-sm md:text-base">{brand.client}</p>
              )}
            </div>
          </div>

          <!-- Project Overview -->
          <div class="space-y-2.5 text-sm md:text-base">
            <div class="flex items-center gap-2.5">
              <svg class="w-4 h-4 md:w-5 md:h-5 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
              <span class="text-gray-300">{brand.sector}</span>
            </div>
            <div class="flex items-center gap-2.5">
              <svg class="w-4 h-4 md:w-5 md:h-5 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span class="text-gray-300">{brand.country}</span>
            </div>
            <div class="flex items-center gap-2.5">
              <svg class="w-4 h-4 md:w-5 md:h-5 text-purple-400 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
              <span class="text-gray-300">{brand.year}</span>
            </div>
          </div>

          <!-- Summary -->
          <p class="text-gray-300 leading-relaxed text-sm md:text-base">{brand.summary}</p>

          <!-- Project Brief -->
          <div>
            <h2 class="text-lg md:text-xl font-bold mb-3 text-purple-400">Project Brief</h2>
            <p class="text-gray-300 leading-relaxed text-sm md:text-base">{brand.projectBrief}</p>
          </div>

          <!-- Our Approach -->
          {brand.approach && (
            <div>
              <h2 class="text-lg md:text-xl font-bold mb-3 text-purple-400">Our Approach</h2>
              <p class="text-gray-300 leading-relaxed text-sm md:text-base">{brand.approach}</p>
            </div>
          )}

          <!-- The Result -->
          {brand.result && (
            <div>
              <h2 class="text-lg md:text-xl font-bold mb-3 text-purple-400">The Result</h2>
              <p class="text-gray-300 leading-relaxed text-sm md:text-base">{brand.result}</p>
            </div>
          )}

          <!-- Scope of Work -->
          <div>
            <h2 class="text-lg md:text-xl font-bold mb-3 text-purple-400">Scope of Work</h2>
            <p class="text-gray-300 text-sm md:text-base">{brand.scopeOfWork}</p>
          </div>
        </div>

        <!-- Right Panel - Project Gallery -->
        <div>
          <ProjectGallery client:load images={brand.galleryImages} title={brand.title} />
        </div>
        
        <!-- Back Button -->
        <div class="mt-12 pt-8 border-t border-white/10">
          <a href="/projects" class="text-purple-400 hover:text-purple-300 inline-flex items-center gap-2 transition-colors text-sm md:text-base">
            <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Back to Projects
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>


